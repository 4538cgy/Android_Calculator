<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:weightSum="1"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        />
    <LinearLayout
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/recycler_chat_item_profile_iamgeView"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/ic_launcher_background"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_weight="0.5"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            >
            <TextView
                android:id="@+id/Bmi_View_Bmi_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BMI"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/Bmi_View_Bmr_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BMR"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bmi_recycler__item_contents_textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            >
            <TextView
                android:id="@+id/Bmi_View_Age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="23세"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="나이"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/Bmi_View_Weight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="60kg"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="몸무게"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/Bmi_View_Height"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="160cm"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="키"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bmi_recycler__item_contents_textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            >
            <TextView
                android:id="@+id/Bmi_View_Sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="성별"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/Bmi_View_Health"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="운동량"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>






    </LinearLayout>