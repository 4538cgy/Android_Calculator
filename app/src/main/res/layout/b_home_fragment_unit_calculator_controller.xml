<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="14dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/unit_calculator_menu_recycler"
        android:layout_weight="0.14"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        />

    <LinearLayout
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"

        >


        <LinearLayout


            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_rectangle_white"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                android:id="@+id/unit_calculator_input_text_EditText"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="numberDecimal"
                    android:textColor="#2E2EFE"

                />

                <TextView
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=" = "
                    android:textColor="#2E2EFE"
                    />
                <TextView
                    android:id="@+id/converted_textview"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:textColor="#2E2EFE"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="0.1"
                    android:id="@+id/criteria_textview1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="cm"
                    android:textColor="#2E2EFE"
                    />

                <TextView
                    android:layout_weight="0.1"
                    android:id="@+id/criteria_textview2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="cm"
                    android:textColor="#2E2EFE"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_round_rectangle_white"
            android:elevation="6dp"
            android:layout_margin="12dp"

            >
            <Spinner
                android:layout_weight="4"
                android:id="@+id/unit_calculator_spinner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <TextView

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:gravity="center"
                android:textSize="20dp"
                />
            <Spinner
                android:layout_weight="4"
                android:id="@+id/unit_calculator_spinner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />




        </LinearLayout>

    </LinearLayout>
</LinearLayout>